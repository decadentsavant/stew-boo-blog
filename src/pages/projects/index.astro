---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectsCard from "../../components/ProjectsCard.astro";
import ProjectModal from "../../components/ProjectModal.astro";
import { projects } from "./projectsData.js";
const pageTitle = "Co's Projects";
---

<BaseLayout pageTitle={pageTitle}>
    <h1 class="pt-8 pb-8 text-3xl text-center text-text-cream">
        Select Projects
    </h1>
    <div class="flex flex-col items-center gap-5 lg:grid lg:grid-cols-2">
        {
            projects.map((project, index) => (
                <ProjectsCard
                    title={project.title}
                    desc={project.shortDesc}
                    img={project.img}
                    alt={project.alt}
                />
            ))
        }
    </div>
    <ProjectModal />
</BaseLayout>

<script>
    import "../../scripts/toggleProjectModal.js";
</script>
